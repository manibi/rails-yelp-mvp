<div class="container mx-auto mt-3" style="width: 60%">
  <h1 style="text-align: center">Restaurants</h1>

  <div class="p-2" style="margin: 50px; background-color: white); box-shadow: 0px 0px 10px rgba(0,0,0,.2)">
    <ul class= "list-unstyled pl-3">
    <% @restaurants.each do |restaurant| %>
      <li><%= link_to restaurant.name, restaurant_path(restaurant) %></li>
    <% end %>
    </ul>
    <div style= "text-align: center; text-decoration: none;">
      <%= link_to "Create new Restaurant", new_restaurant_path %>
    </div>
  </div>
</div>

