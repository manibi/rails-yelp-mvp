<div class="container mx-auto mt-3" style="width: 60%">
  <h2 style="text-align: center"><%= @restaurant.name %></h2>

  <div class="p-2" style="margin: 50px; background-color: white; box-shadow: 0px 0px 10px rgba(0,0,0,.2)">
    <p><%= @restaurant.address %></p>
    <p><%= @restaurant.phone_number %></p>
    <p><%= @restaurant.category %></p>

    <div>
      <h4>Reviews</h4>
      <ul class= "list-unstyled pl-3">
        <% @restaurant.reviews.each do |review| %>
          <li>-
            <%= review.content %>
          </li>
        <% end %>
      </ul>
    </div>
    <div>
      <%= link_to "1. Add your review", new_restaurant_review_path(@restaurant) %>
    </div>
    <div>
      <%= link_to "2. Edit restaurant", edit_restaurant_path(@restaurant) %>
    </div>
    <div>
      <%= link_to "3. Delete restaurant", restaurant_path(@restaurant), method: :delete %>
    </div>
    <div>
      <%= link_to "4. Back to restaurant list", restaurants_path %>
    </div>
  </div>
</div>
